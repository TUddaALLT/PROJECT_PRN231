<style>
    /* Style for the table */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    /* Style for table header */
    th {
        background-color: #f2f2f2;
        text-align: left;
        padding: 8px;
    }

    /* Style for table rows */
    tr {
        border-bottom: 1px solid #ddd;
    }

    /* Style for table data */
    td {
        padding: 8px;
    }

    /* Style for form */
    form {
        display: inline; /* Ensures forms are displayed inline */
    }

    /* Style for submit button */
    input[type="submit"] {
        background-color: #dc3545; /* Red color */
        color: white;
        border: none;
        padding: 8px 16px;
        cursor: pointer;
        border-radius: 4px;
    }

    /* Style for submit button on hover */
    input[type="submit"]:hover {
        background-color: #c82333; /* Darker red color */
    }
</style>

<h2>Add question to exam @ViewBag.ExamId</h2>
<table>
    <thead>
        <tr>
            <th>Question ID</th>
            <th>Question Text</th>
            <th>Difficulty Level</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.Questions)
        {
            <tr id="row_@item.QuestionId">
                <td>@item.QuestionId</td>
                <td>@item.QuestionText</td>
                <td>@item.DifficultyLevel</td>
                <td>
                    <form method="post" action="@Url.Action("AddQuestionToExamPost", "Exam")">
                        <input type="hidden" value="@item.QuestionId" name="QuestionId" />
                        <input type="hidden" value="@ViewBag.ExamId" name="ExamId" />
                        <input class="btn btn-danger" type="submit" value="Add this">
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
